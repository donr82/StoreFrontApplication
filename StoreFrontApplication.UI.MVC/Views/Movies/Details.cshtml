@model StoreFrontApplication.DATA.EF.Movie

@{
    ViewBag.Title = Model.MovieTitle + " Details";
}


<h2 class="MoviesDetails text-center">@ViewBag.Title</h2>
<div id="main" class=" formContainer section-title shop bg-light">
    <div class="container">
        <div class="row bg-light">
            <div class="col-lg-4 col-md-4">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.MovieTitle)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MovieTitle)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Price)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ReleaseDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ReleaseDate)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.Genre.GenreName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Genre.GenreName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Rating)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Rating.Rating1)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                </dl>
                <p>
                    @using (Html.BeginForm("AddToCart", "Movies", new { @movieID = Model.MovieID }, FormMethod.Post, new { @class = "text-center" }))
                    {
                        @Html.HiddenFor(x => x.MovieID)
                        <span class="label">Quantity: </span>
                        @Html.TextBox("Qty", 1, new { @class = "form-control", style = "max-width: 50px;display: inline;" })
                        <input type="submit" value="Add to Cart" class="btn btn-success" name="qty" />
                    }
                </p>
            </div>
            <div id="imageMargin" class="col-lg-4 col-md-4">
                <img class="imgPadding" src="~/Content/imgstore/movies/@Model.MovieImage" alt="Movie cover" title="@Model.MovieTitle" />
                <p>
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = Model.MovieID }, new { @class = "btn btn-primary pull-left" }) 
                    }
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger pull-right" })
                </p>
            </div>
        </div>
    </div>
</div>
